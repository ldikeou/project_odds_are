
	<% if @pending_friendships.empty?  %>
		<p> You have no pending requests</p>
	<% else %>
		<% @pending_friendships.each do |pf| %>
			<ul>
				<div class="friendrequests">
					<li><p><%= pf.requester.email %></p></li>
					<li><%= link_to 'accept friend', friendship_path(pf, status: "accepted"), method: :patch, class: "btn-sm btn-black" %> </li
						 		>
			 		<li><%= link_to 'decline friend', friendship_path(pf, status: "declined"), method: :patch, class: "btn-sm btn-black"  %></li>
				 </div>
			</ul>
		<% end %>	
	<% end %>
	<br>
	<p>
		<%= link_to 'Back to Profile', user_path, {:method => :get}  %></p>
	</p>
