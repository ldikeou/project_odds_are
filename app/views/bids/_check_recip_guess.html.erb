<div class="jumbotron">
	<% if @bid.recip_guess == @bid.challenger_guess %>
		<h1>CHALLENGE ACCEPTED</h1><br>
		<h1> I will attempt to complete... <%= @bid.description %> <h1>
		<%= hidden_field :completion_status, :value => "complete_the_challenge" %>
		<%= link_to 'Back to Profile', current_user, class: "btn btn-info" %>
		<%= link_to 'Complete bid now #legend', bid_path(@bid), class: "btn btn-info"%>
	<% else %>
		<h1>Play again?</h1>
		<%= link_to 'Back to Profile', current_user, class: "btn btn-info" %>
		<%= link_to 'Back to Bids', bids_path, class: "btn btn-info" %>
	<% end %>
</div>	