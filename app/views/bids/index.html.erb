
<table class="table table-striped">
  <h1> Challenges For Me <h1>
  <thead>
    <tr>
      <th>Sender: Challenger</th>
      <th>Challenge Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_bids.each do |bid| %>
      <tr>
          <td><%= bid.sender.username %></td>
          <td><%= bid.description %></td>
          <td><%= bid.completion_status %></td>
          <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
          <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>      
      </tr>
    <% end %>
  </tbody>
</table>  

<table class="table table-striped">
  <h1> People I Have Challenged! <h1>
  <thead>
    <tr>
      <th>Receiver:         </th>
      <th>Challenge Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @their_bids.each do |bid| %>
      <tr>
          <td><%= bid.receiver.username %></td>
          <td><%= bid.description %></td>
          <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
          <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr>
    <% end %>
  </tbody>
</table> 
